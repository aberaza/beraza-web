{
  "private": true,
  "name": "berazaweb-preact",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npx preact watch",
    "start:dev": "npx preact watch",
    "start:prod": "npx preact watch",
    "build": "npx preact build --no-prerender",
    "serve": "npx sirv build --cors --single",
    "dev": "PREACT_APP_DEV=true npx preact watch",
    "lint": "npx eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "jest-silent-reporter": "^0.2.1",
    "jest-simple-dot-reporter": "^1.0.5",
    "node-sass": "^4.13.1",
    "preact-cli": "^3.0.0-rc.10",
    "preact-cli-plugin-env-vars": "^1.2.1",
    "preact-render-spy": "^1.2.1",
    "sass-loader": "^8.0.2",
    "sirv-cli": "^0.4.5"
  },
  "dependencies": {
    "preact": "^10.3.2",
    "preact-async-route": "^2.2.1",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "browserslist": [
    "defaults"
  ],
  "jest": {
    "preset": "jest-preset-preact",
    "reporters" : [
      ["jest-silent-reporter", { "useDots": true, "showPaths": true }],
      ["jest-simple-dot-reporter", {"color": true}]
    ],
    "coverageReporters": [
      "json"
    ],
    "maxConcurrency": 2,
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    },
    "moduleNameMapper": {
      "/src/(.*)": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
